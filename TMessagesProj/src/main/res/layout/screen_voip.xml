<?xml version="1.0" encoding="utf-8"?>
<org.telegram.ui.Call.ColoredInsetConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <View
        android:id="@+id/topInsetView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <org.telegram.ui.Call.VoIpBackgroundView
        android:id="@+id/mainBackgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <org.telegram.ui.Call.CallingUserPhotoView
        android:id="@+id/callingUserPhotoView"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topInsetView" />

    <org.telegram.ui.Components.BackupImageView
        android:id="@+id/callingUserPhoto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/callingUserPhotoView"
        app:layout_constraintLeft_toLeftOf="@id/callingUserPhotoView"
        app:layout_constraintRight_toRightOf="@id/callingUserPhotoView"
        app:layout_constraintTop_toTopOf="@id/callingUserPhotoView" />

    <org.telegram.ui.Call.VoIPPinchZoomFrameLayout
        android:id="@+id/pinch_zoom_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <org.telegram.ui.Components.voip.VoIPTextureView
            android:id="@+id/callingUserTextureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </org.telegram.ui.Call.VoIPPinchZoomFrameLayout>

    <org.telegram.ui.Components.voip.VoIPFloatingLayout
        android:id="@+id/currentUserCameraFloatingLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <org.telegram.ui.Components.voip.VoIPTextureView
            android:id="@+id/currentUserTextureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </org.telegram.ui.Components.voip.VoIPFloatingLayout>

    <org.telegram.ui.Components.voip.VoIPFloatingLayout
        android:id="@+id/callingUserMiniFloatingLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff1b1f23" />

        <org.webrtc.TextureViewRenderer
            android:id="@+id/callingUserMiniTextureRenderer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </org.telegram.ui.Components.voip.VoIPFloatingLayout>

    <View
        android:id="@+id/bottomShadow"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomInsetView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/topShadow"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topInsetView" />

    <org.telegram.ui.Components.BackupImageView
        android:id="@+id/callingUserPhotoViewMini"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginTop="68dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topInsetView" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/statusLayoutTopBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="callingUserPhotoView,emojiFrame" />

    <org.telegram.ui.Call.VoIPStatusLayout
        android:id="@+id/statusLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusLayoutTopBarrier">

        <TextView
            android:id="@+id/callingUserTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:gravity="center_horizontal"
            android:importantForAccessibility="no"
            android:textColor="@android:color/white"
            android:textSize="26dp" />

        <org.telegram.ui.Components.voip.VoIPStatusTextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:importantForAccessibility="noHideDescendants" />

    </org.telegram.ui.Call.VoIPStatusLayout>

    <TextView
        android:id="@+id/btnHideEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/voip_hideemoji_bg"
        android:clickable="true"
        android:focusable="true"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:paddingRight="16dp"
        android:paddingBottom="4dp"
        android:text="Hide Emoji"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topInsetView" />

    <View
        android:id="@+id/emojiBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/voip_emoji_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/emojiFrame"
        app:layout_constraintLeft_toLeftOf="@id/emojiFrame"
        app:layout_constraintRight_toRightOf="@id/emojiFrame"
        app:layout_constraintTop_toTopOf="@id/emojiFrame" />

    <LinearLayout
        android:id="@+id/emojiFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topInsetView">

        <LinearLayout
            android:id="@+id/emojiLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/emojiEncriptionTextView"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="This call is end-to end encrypted"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/emojiRationalTextView"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:visibility="gone" />

    </LinearLayout>

    <org.telegram.ui.Components.voip.VoIPButtonsLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/bottomInsetView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <org.telegram.ui.Components.voip.AcceptDeclineView
        android:id="@+id/acceptDeclineView"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        app:layout_constraintBottom_toTopOf="@id/bottomInsetView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="16dp"
        android:src="@drawable/ic_ab_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topInsetView" />

    <ImageView
        android:id="@+id/speakerPhoneIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topInsetView" />

    <org.telegram.ui.Components.voip.VoIPNotificationsLayout
        android:id="@+id/notificationsLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="bottom"
        app:layout_constraintBottom_toTopOf="@id/bottomInsetView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <org.telegram.ui.Components.HintView
        android:id="@+id/tapToVideoTooltip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottomInsetView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</org.telegram.ui.Call.ColoredInsetConstraintLayout>