<?xml version="1.0" encoding="utf-8"?>
<org.telegram.ui.Call.ColoredInsetFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <org.telegram.ui.Call.VoIPPinchZoomFrameLayout
        android:id="@+id/pinch_zoom_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.telegram.ui.Call.CallingUserPhotoView
            android:id="@+id/callingUserPhotoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <org.telegram.ui.Components.voip.VoIPTextureView
            android:id="@+id/callingUserTextureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </org.telegram.ui.Call.VoIPPinchZoomFrameLayout>

    <org.telegram.ui.Components.voip.VoIPFloatingLayout
        android:id="@+id/currentUserCameraFloatingLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <org.telegram.ui.Components.voip.VoIPTextureView
            android:id="@+id/currentUserTextureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </org.telegram.ui.Components.voip.VoIPFloatingLayout>

</org.telegram.ui.Call.ColoredInsetFrameLayout>